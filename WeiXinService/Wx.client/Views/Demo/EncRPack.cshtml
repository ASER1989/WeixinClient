@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head> 
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>口令红包</title>
    <style type="text/css">
        .container {
            width: 100%;
            text-align: center;
            box-sizing: border-box;
            padding-top: 5rem;
            display: none;
            overflow-x: hidden;
        }

        .pack-img {
            width: 10rem;
        }

        .form {
            padding-top: 1rem;
        }

        .input {
            border: solid 1px gray;
            height: 1.5rem;
            width: 10rem;
            border-radius: 3px;
            font-size: 0.8rem;
            padding: 0 5px;
        }

        .sub {
            display: inline-block;
            width: 3.9rem;
            height: 1.5rem;
            line-height: 1.5rem;
            text-decoration: none;
            border: solid 1px #9c5f03;
            background-color: #FF9800;
            color: #FFF;
            border-radius: 4px;
            cursor: pointer;
        }

        .rotate {
            animation: rote 3s;
        }

        @@keyframes rote {
            0% {
                transform: rotateY(0deg);
            }

            49% {
                transform: rotateY(180deg);
            }

            53% {
                transform: rotateY(180deg);
            }

            100% {
                transform: rotateY(360deg);
            }
        }

        @@-webkit-keyframes rote {
            0% {
                -webkit-transform: rotateY(0deg);
            }

            49% {
                -webkit-transform: rotateY(180deg);
            }

            53% {
                -webkit-transform: rotateY(180deg);
            }

            100% {
                -webkit-transform: rotateY(360deg);
            }
        }
        @@-webkit-keyframes loadrun {
            0% {
                -webkit-transform: rotateZ(0deg);
            }

            100% {
                -webkit-transform: rotateZ(355deg);
            }
        }
        @@keyframes loadrun {
            0% {
                transform: rotateZ(0deg);
            }

            100% {
                transform: rotateZ(355deg);
            }
        }

        .dialog {
            width: 100%;
            height: 100%;
            position: absolute;
            z-index: 998;
            top: 0;
            box-sizing: border-box;
            left: 0;
            background-color: rgba(70, 70, 70, 0.52);
            padding-top: 10rem;
            display:none;
        }

        .dia-box {
            width: 16rem;
            border-radius: 5px;
            background-color: #FFFFFF;
            height: 10rem;
            margin: auto;
            display: -moz-box;
            display: -webkit-box;
            display: box;
            -webkit-box-orient: vertical;
            -moz-box-orient: vertical;
            box-orient: vertical;
        }
        .dia-content {
            height:8rem;
            text-align:center;
            word-break:break-all;
            word-wrap:break-word;
            box-sizing:border-box;
            padding:1rem;
        }
        .dia-bottom {
            height: 2rem;
            background-color: #cecece;
            border-bottom-left-radius: 5px;
            border-bottom-right-radius: 5px;
            overflow:hidden;
        }
        .dia-ok {
            display:block;
            width: 100%;
            height: 2rem;
            background-color: #FF9800;
            color:#ffffff;
            text-align:center;
            text-decoration:none;
            line-height:2rem;
            cursor:pointer;
        }
        .loading {
            background-color: transparent;
            text-align: center;
            color: #FFFFFF;
            display: -moz-box;
            display: -webkit-box;
            display: box;
            line-height:1.8rem;
            padding-left:30%;
        }
        .load-img {
            display:block;
            width: 1.8rem;
            height:1.8rem;
            animation: loadrun 1s linear infinite;
        }
    </style>
</head>
<body>
    <div class="container">
        <img class="pack-img" src="/res/img/redpack.png" />
        <div class="form">
            <input id="_key" class="input" type="text" value="" placeholder="输入口令，领取红包" />
            <a class="sub" href="javascript:void(0);">领取</a>
        </div>

    </div>

    <div id="dialogBox" class="dialog">
        <div class="loading">
        <img class="load-img" src="/res/img/loading.png" /><div></div>
        </div>
        <div class="dia-box">
            <div class="dia-content" id="_d_msg">
                
            </div>
            <div class="dia-bottom">
                <a class="dia-ok" href="javascript:void(0)">OK</a>
            </div>
        </div>
    </div>

    <script src="~/Res/Scripts/zepto.js"></script>
    <script src="~/Res/Scripts/require.js"></script>
    <script type="text/javascript">
        $(function () {
            require("/res/scripts/zoom.js", function () {
                zoom.calc(function () {
                    $(".container").css("display", "block");
                });
                $(window).on("resize", zoom.reSize);

            });

            var isSubmit = false;

            $(".sub").on("click", function () {

                var key = $("#_key").val();
                if (key != null && key.length > 0) {
                     
                    if (isSubmit) return; 
                    isSubmit = true;

                    dialog.loading("让红包先飞一会儿！");

                    $(".pack-img").addClass("rotate");
                    var st = +new Date();
                    $.ajax({
                        url: "/home/getencrpack",
                        type: "GET",
                        data: { key: key },
                        success: function (v) {
                            v = JSON.parse(v);
                            var et = 3000-(new Date() - st);
                            et = et < 0 ? 0 : et;
                            
                            setTimeout(function () {
                                dialog.show(v.data);
                                $(".pack-img").removeClass("rotate");
                                isSubmit = false;
                            }, et); 
                        },
                        error: function () {
                            isSubmit = false;
                        }
                    });
                }
            });

            var dialog = (function () {
                var box = $("#dialogBox");
                var content = $("#_d_msg");
                var loading = box.find(".loading");
                var alterbox = box.find(".dia-box");

                $(".dia-ok").on("click", function () {
                    box.hide();
                });

                function show(msg) { 
                    msg && content.html(msg);
                    loading.hide();
                    alterbox.show();
                    box.show();
                }
                function showLoading(msg) {
                   
                    alterbox.hide();
                    loading.find("div").html(msg);
                    loading.show();
                    box.show();
                    
                }


                return {
                    show: show,
                    hide: box.hide,
                    loading: showLoading
                }
            })();

        })
    </script>
</body>
</html>
